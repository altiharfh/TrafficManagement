    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: read json file",
            "type": "python",
            "request": "launch",
            "program": "examples/read_json_example.py",
            "console": "integratedTerminal",
            "args" : ["jsonpath=examples/test.json"]
        },
        {
            "name": "Python Debugger: main file",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args" : ["--pdf_file_out=out.pdf","sec=hello"]
        }
    ]
}